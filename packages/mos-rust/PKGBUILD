pkgname=mos-rust
pkgver=1.85.0
pkgrel=2
pkgdesc="Systems programming language focused on safety, speed and concurrency"
url=https://www.rust-lang.org/
arch=(x86_64)
license=("Apache-2.0 OR MIT")
options=(
  !emptydirs
  !lto
)
depends=(
  bash
  curl
  gcc
  gcc-libs
  glibc
  libssh2
  openssl
  zlib
  x86_64-mos-binutils x86_64-mos-gcc x86_64-mos-mlibc
  riscv64-mos-binutils riscv64-mos-gcc riscv64-mos-mlibc
  mos-llvm
  llvm18
)
makedepends=(
  git
  cmake
  libffi
  lld
  musl
  ninja
  perl
  python
  rust
  wasi-libc
  mos-rust
)
source=("rust::git+https://github.com/moodyhunter/rust.git")
b2sums=('SKIP')

prepare() {
  cd $srcdir/rust

  cat >config.toml <<END
profile = "user"
change-id = 123337

[llvm]
link-shared = false

[build]
target = [
  "x86_64-unknown-linux-gnu",
  "x86_64-unknown-mos"
]

docs = false
extended = true

tools = [
  "cargo",
  "clippy",
  "rustdoc",
  "rustfmt",
  "rust-analyzer",
  "rust-analyzer-proc-macro-srv",
  "analysis",
  "rust-demangler",
  "src",
]

#cargo = "/opt/mos-rust/bin/cargo"
#rustc = "/opt/mos-rust/bin/rustc"
#rustfmt = "/opt/mos-rust/bin/rustfmt"
locked-deps = true

[install]
prefix = "/opt/mos-rust/"
sysconfdir = "etc/"

[rust]
codegen-units-std = 1
debuginfo-level = 1
debuginfo-level-std = 2
channel = "stable"
description = "Rust for MOS, built on $(date)"
rpath = true
frame-pointers = true
deny-warnings = false
backtrace-on-ice = true
remap-debuginfo = false

[dist]
compression-formats = ["gz"]

[target.x86_64-unknown-linux-gnu]
ar = "/usr/bin/ar"
cc = "/usr/bin/gcc"
cxx = "/usr/bin/g++"
linker = "/usr/bin/gcc"
ranlib = "/usr/bin/ranlib"
llvm-config = "/opt/mos-llvm/bin/llvm-config"

[target.x86_64-unknown-mos]
ar = "/usr/bin/x86_64-mos-ar"
cc = "/usr/bin/x86_64-mos-gcc"
cxx = "/usr/bin/x86_64-mos-g++"
linker = "/usr/bin/x86_64-mos-gcc"
ranlib = "/usr/bin/x86_64-mos-ranlib"
llvm-config = "/opt/mos-llvm/bin/llvm-config"

END
}

build() {
  cd $srcdir/rust

  export RUST_BACKTRACE=1
  unset CFLAGS CXXFLAGS LDFLAGS

  DESTDIR="$srcdir/dest-rust" BOOTSTRAP_SKIP_TARGET_SANITY=1 python ./x.py install -j "$(nproc)"
}

package() {
  optdepends=(
    'gdb: rust-gdb script'
    'lldb: rust-lldb script'
  )
  cp -a dest-rust/* "$pkgdir"
}

# vim:set ts=2 sw=2 et:
